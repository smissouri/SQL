--display the database by price
SELECT * FROM clothingco;
SELECT * FROM clothingco ORDER BY price;

--what is the stats for price and quantity?
SELECT SUM(price) FROM clothingco;
SELECT MAX(quantity) FROM clothingco;
SELECT SUM(quantity) FROM clothingco;
